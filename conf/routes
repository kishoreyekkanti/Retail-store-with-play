# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       Application.index
GET     /products                               Products.index
GET     /hotels/list                            Products.list
GET     /products/{id}                            Products.show
GET     /hotels/{id}/booking                    Products.book
POST    /hotels/{id}/booking                    Products.confirmBooking
DELETE  /bookings/{id}                          Products.cancelBooking
GET     /register                               Application.register
POST    /register                               Application.saveUser
GET     /settings                               Products.settings
POST    /settings                               Products.saveSettings
POST    /login                                  Application.login
GET     /logout                                 Application.logout

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
